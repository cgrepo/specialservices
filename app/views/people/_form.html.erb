  <div class='row be-round_ligth_gray'>
    <div class='container'>
        <div class='row'>
          <div class='col-xs col-md-6'>
          <% if @person.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@person.errors.count, "error") %> no se pudo guardar la informacion!:</h2>
              <ul>
              <% @person.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>      
          </div>
        </div>
      </div>
  </div>
  <div class='col-xs col-md-12'>
    <ul class="nav nav-tabs">
      <li class="active"><a href="#home" data-toggle="tab">SOLICITANTE</a></li>
      <li><a href="#responsables" data-toggle="tab">RESPONSABLE</a></li>
      <li><a href="#relatives" data-toggle="tab">PARIENTES</a></li>
    </ul>
  </div>
   <div id="myTabContent" class="tab-content">
    <div class="tab-pane fade active in" id="home">
      <%= bootstrap_form_for(@person ) do |f| %>
        <div class='row be-round_ligth_gray'>
          <div class='col-xs col-md-6'>
            <%= f.text_field_with_bootstrap :name, label:'Nombre' %>
          </div>
          <div class='col-xs col-md-1'>
            <%= f.number_field_with_bootstrap :age, label:'Edad' %>
          </div>
          <div class='col-xs col-md-1'>
            <%= f.select_with_bootstrap :gender, [['M'],['F']] ,label:'SEXO' %>
          </div>
          <div class='col-xs col-md-2'>
            <%= f.select_with_bootstrap :civil_status,[['SOLTERO'],['CASADO'],['VIUDO(A)'],['UNION LIBRE'],['MS'],['OTRO'] ],label:'Edo. civil' %>
          </div>
          <div class='col-xs col-md-2'>
            <%= f.text_field_with_bootstrap :salary, prepend:'$' ,label:'Salario', append:'.00' %>
          </div>
        </div>
        <div class='row be-round_ligth_gray'>
          <div class='col-xs col-md-2'>
            <%= f.select_with_bootstrap :scolarship,[['PRIMARIA'],['SECUNDARIA'],['PREPARATORIA'],['UNIVERSIDAD'],['OTRO']]  ,label:'Escolaridad' %>
          </div>
          <div class='col-xs col-md-2'>
            <%= f.text_field_with_bootstrap :relationship, label:'Parentesco' %>
          </div>
          <div class='col-xs col-md-2'>
            <%= f.text_field_with_bootstrap :phone, label:'Telefono' %>
          </div>
          <div class='col-xs col-md-2'>
            <%= f.text_field_with_bootstrap :admission_date, label:'Fecha admision', class:'xdate' %>
          </div>
          <div class='col-xs col-md-2'>
            <%= f.text_field_with_bootstrap :birth_date, label:'Fecha nacimiento' %>
          </div>
          <div class='col-xs col-md-2'>
            <%= f.select_with_bootstrap :transportation,[['PUBLICO'],['PRIVADO'],['OTRO']] ,label:'Transporte' %>
          </div>
        </div>
        <div class='row be-round_ligth_gray'>
          <div class='col-xs col-md-6'>
            <%= f.text_field_with_bootstrap :address, label:'Direccion' %>
          </div>
          <div class='col-xs col-md-6'>
            <%= f.text_field_with_bootstrap :current_residence, label:'Residencia actual' %>
          </div>
        </div>
        <div class='row be-round_ligth_gray'>
          <div class='col-xs col-md-6'>
            <%= f.text_field_with_bootstrap :occupation, label:'Ocupacion' %>
          </div>
          <div class='col-xs col-md-6'>
            <%= f.text_field_with_bootstrap :workplace, label:'Lugar de Trabajo' %>
          </div>
        </div>
        <div class='row be-round_ligth_gray'>
          <div class='col-xs col-md-2'>
            <%= f.submit  %>
            <br>
          </div>
        </div>
      <% end %>
    </div>
