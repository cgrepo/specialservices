  <div class='row be-round_ligth_gray'>
    <div class='container'>
        <div class='row'>
          <div class='col-xs col-md-6'>
          <% if @person.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@person.errors.count, "error") %> no se pudo guardar la informacion!:</h2>
              <ul>
              <% @person.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>      
          </div>
        </div>
      </div>
  </div>
  <div class='col-xs col-md-12'>
    <ul class="nav nav-tabs">
      <li id="person" class="active"><a href="#home" data-toggle="tab">SOLICITANTE</a></li>
      <li id="responsable"><a href="#responsables" data-toggle="tab">RESPONSABLE</a></li>
      <li id="relative"><a href="#relatives" data-toggle="tab">PARIENTES</a></li>
    </ul>
  </div>
  
  <div id="myTabContent" class="tab-content">
    <div class="tab-pane fade active in" id="home">
      <%= bootstrap_form_for(@person ) do |f| %>
      <div class='row be-round_ligth_gray'>
        <div class='col-xs col-md-3'>
          <img id="img_prev" src="#" width='210' height=230 />
          <%= image_tag @person.picture, class:'img-fluid card thumbnail', size:'210x230', id:'actual_picture'  %>
          <%= f.file_field :picture, label:'Foto' %>
          <%= hidden_field_tag(:person_id, @person.id) %>
        </div>
        <div class='col-xs col-md-6'>
          <%= f.text_field_with_bootstrap :name, label:'Nombre', class:'ups' %>
        </div>
        <div class='col-xs col-md-1'>
          <%= f.number_field_with_bootstrap :age, label:'Edad' %>
        </div>
        <div class='col-xs col-md-1'>
          <%= f.select_with_bootstrap :gender, [['M'],['F']] ,label:'SEXO' %>
        </div>
        <div class='col-xs col-md-2'>
          <%= f.select_with_bootstrap :civil_status,[['SOLTERO'],['CASADO'],['VIUDO(A)'],['UNION LIBRE'],['MS'],['OTRO'] ],label:'Edo. civil' %>
        </div>
        <div class='col-xs col-md-2'>
          <%= f.text_field_with_bootstrap :salary, prepend:'$' ,label:'Salario', append:'.00', class:'ups' %>
        </div>
        <div class='col-xs col-md-2'>
            <%= f.select_with_bootstrap :scolarship,[['PRIMARIA'],['SECUNDARIA'],['PREPARATORIA'],['UNIVERSIDAD'],['OTRO']]  ,label:'Escolaridad' %>
        </div>
        <div class='col-xs col-md-2'>
          <%= f.text_field_with_bootstrap :phone, label:'Telefono', class:'ups' %>
        </div>
        <div class='col-xs col-md-2'>
          <%= f.text_field_with_bootstrap :admission_date, label:'Fecha admision', class:'xdate' %>
        </div>
        <div class='col-xs col-md-2'>
          <%= f.text_field_with_bootstrap :birth_date, label:'Fecha nacimiento', class:'xdate' %>
        </div>
        <div class='col-xs col-md-2'>
          <%= f.select_with_bootstrap :transportation,[['PUBLICO'],['PRIVADO'],['OTRO']] ,label:'Transporte' %>
        </div>
      </div>
      <div class='row be-round_ligth_gray'>
        <div class='col-xs col-md-6'>
          <%= f.text_field_with_bootstrap :address, label:'Direccion', class:'ups' %>
        </div>
        <div class='col-xs col-md-6'>
          <%= f.text_field_with_bootstrap :current_residence, label:'Residencia actual', class:'ups' %>
        </div>
      </div>
      <div class='row be-round_ligth_gray'>
        <div class='col-xs col-md-6'>
          <%= f.text_field_with_bootstrap :occupation, label:'Ocupacion', class:'ups' %>
        </div>
        <div class='col-xs col-md-6'>
          <%= f.text_field_with_bootstrap :workplace, label:'Lugar de Trabajo', class:'ups' %>
        </div>
      </div>
      <div class='row be-round_ligth_gray'>
        <div class='col-xs col-md-1'>
          <a  id="save-person" class="btn btn-primary btn-block"><span class="glyphicon glyphicon-floppy-open"></span></a> 
          <br>
        </div>
        <div class='col-xs col-md-1'>
          <a  id="edit-person" class="btn btn-primary btn-block"><span class="glyphicon glyphicon-pencil"></span></a> 
          <br>
        </div>
        <div class='col-xs col-md-1'>
          <a  id="update-person" class="btn btn-primary btn-block"><span class="glyphicon glyphicon-ok-circle"></span></a>
          <br>
        </div>
        </div>
      <% end %>
    </div>
    <div class="tab-pane fade" id="responsables">
      <%= bootstrap_form_for(@responsable) do |f| %>
        <div class='row be-round_ligth_gray'>
          <div class='col-xs col-md-6'>
            <%= f.text_field_with_bootstrap :name, label:'Nombre', class:'ups' %>
            <%= hidden_field_tag(:responsable_id, @responsable.id) %>
          </div>
          <div class='col-xs col-md-1'>
            <%= f.number_field_with_bootstrap :age, label:'Edad' %>
          </div>
          <div class='col-xs col-md-1'>
            <%= f.select_with_bootstrap :gender, [['M'],['F']] ,label:'SEXO' %>
          </div>
          <div class='col-xs col-md-2'>
            <%= f.select_with_bootstrap :civil_status,[['SOLTERO'],['CASADO'],['VIUDO(A)'],['UNION LIBRE'],['MS'],['OTRO'] ],label:'Edo. civil' %>
          </div>
          <div class='col-xs col-md-2'>
            <%= f.text_field_with_bootstrap :salary, prepend:'$' ,label:'Salario', append:'.00' %>
          </div>
        </div>
        <div class='row be-round_ligth_gray'>
          <div class='col-xs col-md-6'>
            <%= f.text_field_with_bootstrap :address, label:'Direccion', class:'ups' %>
          </div>
          <div class='col-xs col-md-6'>
            <%= f.text_field_with_bootstrap :occupation, label:'Ocupacion', class:'ups' %>
          </div>
        </div>
        <div class='row be-round_ligth_gray'>
          <div class='col-xs col-md-4'>
            <%= f.text_field_with_bootstrap :workplace, label:'Lugar de Trabajo', class:'ups' %>
          </div>
          <div class='col-xs col-md-4'>
            <%= f.text_field_with_bootstrap :relationship, label:'Parentesco', class:'ups' %>
          </div>
          <div class='col-xs col-md-1'>
            <br>
            <a  id="save-responsable" class="btn btn-primary btn-block"><span class="glyphicon glyphicon-floppy-open"></span></a>
          </div>
          <div class='col-xs col-md-1'>
            <br>
            <a  id="edit-responsable" class="btn btn-primary btn-block"><span class="glyphicon glyphicon-pencil"></span></a>
          </div>
          <div class='col-xs col-md-1'>
            <br>
            <a  id="update-responsable" class="btn btn-primary btn-block"><span class="glyphicon glyphicon-ok-circle"></span></a>
          </div>
        </div>
      <% end %> 
    </div>
    <div class="tab-pane fade" id="relatives">
      <%= bootstrap_form_for(@relative) do |f| %>
        <div class='row be-round_ligth_gray'>
          <div class='col-xs col-md-6'>
            <%= f.text_field_with_bootstrap :name, label:'Nombre', class:'ups' %>
          </div>
          <div class='col-xs col-md-1'>
            <%= f.number_field_with_bootstrap :age, label:'Edad' %>
          </div>
          <div class='col-xs col-md-1'>
            <%= f.select_with_bootstrap :gender, [['M'],['F']] ,label:'SEXO' %>
          </div>
          <div class='col-xs col-md-2'>
            <%= f.select_with_bootstrap :civil_status,[['SOLTERO'],['CASADO'],['VIUDO(A)'],['UNION LIBRE'],['MS'],['OTRO'] ],label:'Edo. civil' %>
          </div>
          <div class='col-xs col-md-2'>
            <%= f.text_field_with_bootstrap :salary, prepend:'$' ,label:'Salario', append:'.00' %>
          </div>
        </div>
        <div class='row be-round_ligth_gray'>
          <div class='col-xs col-md-4'>
            <%= f.text_field_with_bootstrap :occupation, label:'Ocupacion', class:'ups' %>
          </div>
          <div class='col-xs col-md-4'>
            <%= f.text_field_with_bootstrap :scolarship, label:'Escolaridad', class:'ups' %>
          </div>
          <div class='col-xs col-md-4'>
            <%= f.text_field_with_bootstrap :relationship, label:'Parentesco', class:'ups' %>
          </div>
        </div>
        <div class='row be-round_ligth_gray'>
          <div class='col-xs col-md-1'>
            <br>
            <a  id='addRelative', class="btn btn-primary btn-block"><span class="glyphicon glyphicon-sort-by-attributes-alt"></span></a>
            <br>
          </div>
          <div class='col-xs col-md-1'>
            <br>
            <a id='save_relatives' class="btn btn-primary btn-block"><span class="glyphicon glyphicon-floppy-open"></span ></a>
            <br>
          </div>
          <div class='col-xs col-md-1'></div>
        </div>
      <% end %>
      <div class='row'>
        <div class='col-xs col-md-12'>
          <table id='relationshipTable' class="table table-striped table-hover ">
            <thead>
              <tr>
                <th>NOMBRE</th>
                <th>PARENTESCO</th>
                <th>EDAD</th>
                <th>SEXO</th>
                <th>ESCOLARIDAD</th>
                <th>EDO. CIVIL</th>
                <th>OCUPACION</th>
                <th colspan='2'></th>
              </tr>
            </thead>
            <tbody>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>