<h1>Listing People</h1>

<table>
  <thead>
    <tr>
      <th>Kind</th>
      <th>Name</th>
      <th>Age</th>
      <th>Civil status</th>
      <th>Occupation</th>
      <th>Salary</th>
      <th>Scolarship</th>
      <th>Address</th>
      <th>Workplace</th>
      <th>Current residence</th>
      <th>Relationship</th>
      <th>Phone</th>
      <th>Admission date</th>
      <th>Birth date</th>
      <th>Transportation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.kind %></td>
        <td><%= person.name %></td>
        <td><%= person.age %></td>
        <td><%= person.civil_status %></td>
        <td><%= person.occupation %></td>
        <td><%= person.salary %></td>
        <td><%= person.scolarship %></td>
        <td><%= person.address %></td>
        <td><%= person.workplace %></td>
        <td><%= person.current_residence %></td>
        <td><%= person.relationship %></td>
        <td><%= person.phone %></td>
        <td><%= person.admission_date %></td>
        <td><%= person.birth_date %></td>
        <td><%= person.transportation %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

