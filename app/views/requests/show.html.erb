<div class='row'>
  <p id="notice"><%= notice %></p>
  <div class='col-xs col-md-4'>
    <div class="card border-primary mb-3" >
      <h3 class="card-header">Caso <%= @request.case %></h3>
      <div class="card-body ">
        <h5 class="card-title">Fecha solicitud: <%= @request.rdate %></h5>
        <h6 class="card-subtitle text-muted">Enviado por: <%= @request.sent_by %> Orientado por: <%= @request.oriented %></h6>
      </div>
       <%= image_tag @person.picture, class:'img-rounded img-responsive showme', size:'232x253'   %>
      <div class="card-body">
        <p class="card-text"><h3 align='center'><%= @request.person.name %></h3></p>
      </div>
       <p align='center'><strong>CONDICIONES DE VIVIENDA:</strong></p>
    <div class="card border-primary mb-3">
      <div class="card-header"></div>
      <div class="card-body text-default">
        <h5 class="card-title">TIPO VIVIENDA</h5>
        <p class="card-text"><%= @living.kind %></p>
      </div>
    </div>
    <p><strong>MATERIAL CONSTRUCCION</strong></p>
    <table  class="table table-striped table-hover">
      <thead>
        <th>PARED</th>
        <th>TECHO</th>
        <th>PISO</th>
        <th>CUARTOS</th>
      </thead>
      <tbody>
        <td><%= @living.wall_material %></td>
        <td><%= @living.roof_material %></td>
        <td><%= @living.floor_material %></td>
        <td><%= @living.number_of_rooms %></td>
      </tbody>
    </table>
    <p><strong>CUENTA CON HABITACIONES:</strong></p>
    <table  class="table table-striped table-hover">
      <thead>
        <th>HABITACION</th>
        <th>COCINA</th>
        <th>COMEDOR</th>
        <th>BAÃ‘O</th>
      </thead>
      <tbody>
        <td><%= @living.has_beedroom ?  'SI' :  'NO'%></td>
        <td><%= @living.has_kitchen ?  'SI' :  'NO' %></td>
        <td><%= @living.has_dinningroom ?  'SI' :  'NO' %></td>
        <td><%= @living.has_bathroom ?  'SI' :  'NO' %></td>
      </tbody>
    </table>
    </div>
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">Notas: <%= @request.notes %></h4>
        <h6 class="card-subtitle mb-2 text-muted"></h6>
        <p class="card-text"></p>
      </div>
    </div>
  </div>
  <div class='col-xs col-md-6'>
    <p align='center'>
      <strong>GASTOS:</strong>
      <table  class="table table-striped table-hover ">
        <thead>
          <th>alimentacion</th>
          <th>renta</th>
          <th>electricidad</th>
          <th>agua</th>
          <th>gasolina</th>
          <th>educacion</th>
        </thead>
        <tbody>
          <td><%= @expediture.feeding %></td>
          <td><%= @expediture.rent %></td>
          <td><%= @expediture.electricity %></td>
          <td><%= @expediture.water %></td>
          <td><%= @expediture.fuel %></td>
          <td><%= @expediture.education %></td>
        </tbody>
      </table>
    </p>
    <p align='center'>
      <strong>OTROS GASTOS:</strong><br>
      <table  class="table table-striped table-hover">
        <thead>
          <th>Descripcion</th>
          <th>Cantidad</th>
        </thead>
        <% @otherExpeditures.each do |oe| %>
          <tbody>
            <td><%= oe.name %></td>
            <td><%= oe.amount %></td>
          </tbody>
        <% end %>
      </table>
    </p>
    <p align='center'>
      <strong>PRESTACIONES:</strong>
      <table  class="table table-striped table-hover">
        <thead>
          <th>Descripcion</th>
          <th>Cantidad</th>
        </thead>
        <% @benefits.each do |b| %>
          <tbody>
            <td><%= b.name %></td>
            <td><%= b.amount %></td>
          </tbody>
        <% end %>
      </table>
    </p>
    <p align='center'><strong>SERVICIOS:</strong>
      <table  class="table table-striped table-hover">
        <thead>
          <th>Descripcion</th>
        </thead>
        <% @otherservices.each do |s| %>
          <tbody>
            <td><%= s.name %></td>
          </tbody>
        <% end %>
      </table>
    </p>
  </div>
</div>
<%= link_to showPDF_requests_path(@request, :format => 'pdf') do %>
  <%= icon('file-pdf-o') %>
<% end %>
<%= link_to 'Editar', edit_request_path(@request) %> |
<%= link_to 'Regresar', requests_path %>
