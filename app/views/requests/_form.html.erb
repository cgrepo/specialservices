<%= bootstrap_form_for(@request) do |f| %>
  <div class='row be-round_ligth_gray'>
    <div class='container'>
        <div class='row'>
          <div class='col-xs col-md-6'>
            <% if @request.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@request.errors.count, "error") %> prohibited this request from being saved:</h2>
                <ul>
                <% @request.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            <% end %>
          </div>
        </div>
      </div>
  </div>
  <div class='row be-round_ligth_gray'>
    <div class='col-xs col-md-2'>
      <%= f.text_field_with_bootstrap :case, label:'No. Caso' %>
    </div>
    <div class='col-xs col-md-2'>
      <%= f.text_field_with_bootstrap :rdate, label:'Fecha Solicitud', class:'xdate' %>
    </div>
    <div class='col-xs col-md-4'>
      <%= f.text_field_with_bootstrap :sent_by, label:'Enviado por' %>
    </div>
    <div class='col-xs col-md-4'>
      <%= f.text_field_with_bootstrap :oriented, label:'Orientado a' %>
    </div>
  </div>
  <div class='row be-round_ligth_gray'>
    <div class='col-xs col-md-3'>
      <%= f.text_field_with_bootstrap :service, label:'Servicio' %>
    </div>
    <div class='col-xs col-md-3'>
      <%= f.text_field_with_bootstrap :qualification, label:'Calificacion' %>
    </div>
    <div class='col-xs col-md-6'>
      <%= f.text_area_with_bootstrap :notes, label:'Observaciones' %>
    </div>
    <%#= f.text_field_with_bootstrap :person_id, label:'Person_id' %> 
  </div>
  <div class='row be-round_ligth_gray'>
    <div class='col-xs co-md-9'></div>
    <div class='col-xs col-md-3'>
        <a href="#" class="btn btn-default">
          <%= octicon 'organization', :height => 20 %>
        </a>
    </div>
    
  </div>
  <div class='row be-round_ligth_gray'>
    <div class='col-xs col-md-2'>
      <%= f.submit  %>
      <br>
    </div>
  </div>
<% end %>
