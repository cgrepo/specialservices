<%= stylesheet_link_tag 'sessions', media: 'print, screen'%>
<div class="login">
  <div class="container">
    <div class="form">
        <h1>Login</h1>
 	 	<%= form_for(:user, url: sessions_path) do |f| %>
           	<%= f.text_field :account, :placeholder => "Usuario", class: "username" %>
           	<%= f.password_field :password, :placeholder => "Password", class: "passwd" %>
           	<%= f.submit "Login", class: "btn-submit" %>
   	 	 	<p id="notice"><%= notice %></p>
 	 	 <% end %>
    </div>
  </div>
</div>